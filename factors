#!/usr/bin/env python3

import sys
from subprocess import Popen, PIPE

def main(file_path):
    with open(file_path, 'r') as file:
        for line in file:
            number = int(line.strip())
            factors = factor(number)
            formatted_output = format_output(number, factors)
            print(formatted_output)

def factor(n):
    process = Popen(['factor', str(n)], stdout=PIPE)
    (output, _) = process.communicate()
    return output.decode('utf-8').strip()

def format_output(number, factor_string):
    parts = factor_string.split(': ')
    assert len(parts) == 2
    factors = parts[1].split(' ')
    if len(factors) > 2:
        second_factor = 1
        for factor in factors[1:]:
            second_factor *= int(factor)
        first_factor = int(factors[0])
        if first_factor > second_factor:
            return f"{number}={first_factor}*{second_factor}"
        else:
            return f"{number}={second_factor}*{first_factor}"
    else:
        first_factor = int(factors[0])
        second_factor = int(factors[1])
        if first_factor > second_factor:
            return f"{number}={first_factor}*{second_factor}"
        else:
            return f"{number}={second_factor}*{first_factor}"

if __name__ == '__main__':
    if len(sys.argv) != 2:
        print('Usage: ./factors <file>')
        sys.exit(1)
    main(sys.argv[1])
